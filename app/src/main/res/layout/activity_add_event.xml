<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="r.test.com.calendarnotification.AddEvent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Event name"
                android:maxLines="1"
                android:padding="5dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_desc"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/edt_name"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Description"
                android:maxLines="2"
                android:padding="5dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_location"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/edt_desc"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Location"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="-2dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_guest"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/edt_location"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Guests"
                android:maxLines="1"
                android:padding="5dp"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/edt_guest"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_from_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:hint="From date"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_to_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:hint="To date"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/layout_date"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_from_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:hint="From time"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_to_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:hint="To time"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:text="Save"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Cancel"
            android:textColor="#FFF" />

    </LinearLayout>


</LinearLayout>
